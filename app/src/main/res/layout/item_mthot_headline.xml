<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <FrameLayout
            android:id="@+id/fl_hot_movie"
            android:layout_width="68dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/iv_hot_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@mipmap/ic_launcher" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_hot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/fl_hot_movie"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_hot_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/sp_16"
                tools:text="太空旅客" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hot_score_or_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_hot_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/fl_hot_movie">

            <TextView
                android:id="@+id/tv_hot_audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="观众" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_hot_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_hot_score_or_wish"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/fl_hot_movie"
            tools:text="外星来访客，目的难预测" />

        <TextView
            android:id="@+id/tv_hot_showInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hot_desc"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@id/fl_hot_movie"
            tools:text="今天138家影院放映1152场" />
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="88dp"
            android:background="@color/divider_normal" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <FrameLayout
                android:layout_width="68dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_hot_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_tv_topic"
                    android:textColor="@color/text_yellow"
                    tools:text="专题" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_hot_headline_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="13sp"
                tools:text="航天博士提醒太空啪啪啪都是骗人滴！" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="88dp"
            android:background="@color/divider_normal" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">

            <FrameLayout
                android:layout_width="68dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_hot_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_tv_topic"
                    android:textColor="@color/text_yellow"
                    tools:text="专题" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_hot_headline_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="13sp"
                tools:text="航天博士提醒太空啪啪啪都是骗人滴！" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/divider" />


</LinearLayout>
